{
  "name": "autojs-watch",
  "displayName": "Auto.js 自动运行",
  "description": "自动监听js文件并运行",
  "icon": "assets/favicon.png",
  "version": "0.0.2",
  "publisher": "tiaod",
  "repository": {
    "type": "git",
    "url": "https://github.com/tiaod/autojs-watch"
  },
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:autojs-watch.enable"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "autojs-watch.enable",
        "title": "Auto.js 启用自动运行（Watch）"
      }
    ],
    "configuration": [
      {
        "title": "Auto.js Pro: 自动运行（Watch）",
        "properties": {
          "autojs-watch.watchFolder": {
            "type": "string",
            "default": "**/*.js",
            "description": "设置监听的目录。默认是**/*.js"
          }
        }
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.66.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "eslint": "^8.11.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.2",
    "typescript": "^4.5.5",
    "@vscode/test-electron": "^2.1.3"
  }
}
